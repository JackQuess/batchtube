generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlanTier {
  starter    @map("starter")
  power_user @map("power_user")
  archivist  @map("archivist")
  enterprise @map("enterprise")

  @@map("plan_tier")
}

enum BatchStatus {
  created   @map("created")
  queued    @map("queued")
  processing @map("processing")
  completed @map("completed")
  failed    @map("failed")
  cancelled @map("cancelled")

  @@map("batch_status")
}

enum ItemStatus {
  pending    @map("pending")
  queued     @map("queued")
  processing @map("processing")
  completed  @map("completed")
  failed     @map("failed")
  cancelled  @map("cancelled")

  @@map("item_status")
}

model User {
  id                 String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email              String    @unique @db.VarChar(255)
  password_hash      String    @db.VarChar(255)
  plan               PlanTier  @default(starter)
  disabled           Boolean   @default(false)
  stripe_customer_id String?   @db.VarChar(255)
  webhook_secret     String?   @db.VarChar(64)
  created_at         DateTime  @default(now()) @db.Timestamptz(6)
  updated_at         DateTime  @default(now()) @db.Timestamptz(6)

  apiKeys      ApiKey[]
  batches      Batch[]
  batchItems   BatchItem[]
  files        File[]
  usageCounters UsageCounter[]
  auditLogs    AuditLog[]

  @@index([plan], map: "idx_users_plan")
  @@index([created_at], map: "idx_users_created_at")
  @@map("users")
}

model ApiKey {
  id           String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id      String    @db.Uuid
  key_prefix   String    @db.VarChar(10)
  key_hash     String    @unique @db.VarChar(64)
  name         String?   @db.VarChar(50)
  last_used_at DateTime? @db.Timestamptz(6)
  created_at   DateTime  @default(now()) @db.Timestamptz(6)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model Batch {
  id            String      @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id       String      @db.Uuid
  name          String?     @db.VarChar(255)
  status        BatchStatus @default(created)
  options       Json        @default("{}")
  callback_url  String?     @db.VarChar(2048)
  zip_file_path String?     @db.VarChar(1024)
  item_count    Int         @default(0)
  created_at    DateTime    @default(now()) @db.Timestamptz(6)
  completed_at  DateTime?   @db.Timestamptz(6)

  user  User        @relation(fields: [user_id], references: [id], onDelete: Cascade)
  items BatchItem[]
  files File[]

  @@index([user_id], map: "idx_batches_user")
  @@index([status], map: "idx_batches_status")
  @@map("batches")
}

model BatchItem {
  id            String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  batch_id      String     @db.Uuid
  user_id       String?    @db.Uuid
  original_url  String
  provider      String?    @db.VarChar(50)
  status        ItemStatus @default(pending)
  progress      Int        @default(0)
  error_message String?
  retry_count   Int        @default(0)
  created_at    DateTime   @default(now()) @db.Timestamptz(6)
  updated_at    DateTime   @default(now()) @db.Timestamptz(6)

  batch Batch @relation(fields: [batch_id], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [user_id], references: [id])
  files File[]

  @@index([batch_id], map: "idx_items_batch")
  @@map("batch_items")
}

model File {
  id              String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  item_id         String?   @db.Uuid
  batch_id        String    @db.Uuid
  user_id         String?   @db.Uuid
  storage_path    String    @db.VarChar(1024)
  filename        String    @db.VarChar(255)
  file_size_bytes BigInt
  mime_type       String?   @db.VarChar(100)
  expires_at      DateTime  @db.Timestamptz(6)
  created_at      DateTime  @default(now()) @db.Timestamptz(6)

  item  BatchItem? @relation(fields: [item_id], references: [id], onDelete: SetNull)
  batch Batch      @relation(fields: [batch_id], references: [id], onDelete: Cascade)
  user  User?      @relation(fields: [user_id], references: [id])

  @@index([user_id], map: "idx_files_user")
  @@map("files")
}

model UsageCounter {
  user_id         String   @db.Uuid
  period_start    DateTime @db.Date
  bandwidth_bytes BigInt   @default(0)
  items_processed Int      @default(0)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, period_start])
  @@map("usage_counters")
}

model AuditLog {
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id    String?  @db.Uuid
  action     String   @db.VarChar(50)
  resource_id String? @db.Uuid
  ip_address String?  @db.VarChar(45)
  user_agent String?
  created_at DateTime @default(now()) @db.Timestamptz(6)

  user User? @relation(fields: [user_id], references: [id])

  @@map("audit_logs")
}
